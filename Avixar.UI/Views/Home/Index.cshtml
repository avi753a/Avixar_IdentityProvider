@{
    ViewData["Title"] = "Future of Fintech";
}

<!-- HERO SECTION -->
<div class="relative min-h-screen flex flex-col items-center justify-center pt-20 overflow-hidden">
    
    <!-- Background Volumetric Glow -->
    <div class="absolute top-[-10%] left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-metro-primary/20 blur-[120px] rounded-full pointer-events-none"></div>

    <!-- Text Content -->
    <div class="relative z-10 text-center max-w-4xl px-4 mb-16 mt-10">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 mb-8 rounded-full border border-metro-primary/30 bg-metro-primary/10 text-metro-primary text-xs font-bold tracking-widest uppercase">
            <span class="w-2 h-2 rounded-full bg-metro-primary animate-pulse"></span>
            Ecosystem Live
        </div>
        
        <h1 class="font-display text-5xl md:text-8xl font-bold tracking-tight mb-8 leading-tight">
            One Wallet. <br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-metro-primary via-metro-cyan to-metro-primary bg-[length:200%_auto] animate-pulse-slow">Infinite Worlds.</span>
        </h1>
        
        <p class="text-slate-400 text-xl max-w-2xl mx-auto mb-10 leading-relaxed">
            Merge your banking, gaming achievements, and shopping rewards into one digital identity.
        </p>

        <div class="flex flex-col sm:flex-row gap-5 justify-center">
            <a asp-controller="Auth" asp-action="SignUp" class="px-8 py-4 rounded-full bg-metro-primary text-white font-bold shadow-[0_0_30px_rgba(37,99,235,0.5)] hover:shadow-[0_0_50px_rgba(37,99,235,0.7)] hover:scale-105 transition-all">
                Create Citizen ID
            </a>
            <a href="#features" class="px-8 py-4 rounded-full glass hover:bg-white/5 text-slate-300 font-medium transition-all">
                Explore Districts
            </a>
        </div>
    </div>

    <!-- THE 3D TILTED DASHBOARD -->
    <div class="w-full max-w-6xl px-4 scene-3d relative z-0 pb-20">
        <div class="tilted-dashboard animate-float bg-metro-card border border-white/10 rounded-2xl p-2 md:p-3 relative">
            
            <!-- Reflection overlay -->
            <div class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent pointer-events-none rounded-2xl"></div>

            <!-- Inner UI -->
            <div class="bg-[#0f1420] rounded-xl border border-white/5 overflow-hidden h-[500px] md:h-[600px] relative">
                
                <!-- Fake Browser Bar -->
                <div class="h-12 border-b border-white/5 flex items-center px-6 gap-3">
                    <div class="flex gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-500/50"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500/50"></div>
                    </div>
                    <div class="ml-auto text-xs text-slate-600 font-mono">metropolis.app/hub</div>
                </div>

                <!-- Bento Grid Content -->
                <div class="p-8 grid grid-cols-1 md:grid-cols-3 gap-6 h-full">
                    
                    <!-- Card 1: Wallet -->
                    <div class="col-span-2 glass rounded-2xl p-8 relative overflow-hidden group">
                        <div class="absolute top-0 right-0 p-8 opacity-20 group-hover:opacity-40 transition-opacity">
                            <svg class="w-32 h-32 text-metro-primary" viewBox="0 0 24 24" fill="currentColor"><path d="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm12 4a2 2 0 110 4 2 2 0 010-4z"/></svg>
                        </div>
                        <h3 class="text-slate-400 text-sm font-medium uppercase tracking-wider mb-1">Total Assets</h3>
                        <div class="text-5xl font-display font-bold text-white mb-8">$124,500.00</div>
                        <div class="flex gap-3">
                            <button class="px-4 py-2 bg-metro-primary/20 text-metro-primary rounded-lg text-sm font-bold border border-metro-primary/20">Send</button>
                            <button class="px-4 py-2 glass rounded-lg text-sm font-bold text-slate-300">Swap</button>
                        </div>
                    </div>

                    <!-- Card 2: Gaming -->
                    <div class="glass rounded-2xl p-6 border-t-4 border-metro-cyan relative overflow-hidden">
                         <div class="absolute inset-0 bg-metro-cyan/5"></div>
                         <div class="flex justify-between items-center mb-4">
                             <h3 class="text-metro-cyan font-bold">Arcade</h3>
                             <span class="px-2 py-1 bg-metro-cyan/20 text-metro-cyan text-xs rounded font-bold">LIVE</span>
                         </div>
                         <div class="mt-4 space-y-3">
                             <div class="flex items-center gap-3 p-2 bg-black/20 rounded-lg">
                                 <div class="w-10 h-10 bg-metro-cyan rounded-lg flex items-center justify-center text-black font-bold">1</div>
                                 <div>
                                     <div class="text-sm font-bold">Cyber Drifter</div>
                                     <div class="text-xs text-slate-400">Rank: #42</div>
                                 </div>
                             </div>
                         </div>
                    </div>

                    <!-- Card 3: Shopping -->
                    <div class="col-span-3 glass rounded-2xl p-6 border-l-4 border-metro-gold flex items-center justify-between">
                        <div>
                            <h3 class="text-metro-gold font-bold mb-1">Marketplace Deal</h3>
                            <p class="text-slate-400 text-sm">Nike Cyber-Air Max - 50% Off via Tokens</p>
                        </div>
                        <button class="px-6 py-2 bg-metro-gold text-black font-bold rounded-lg hover:bg-yellow-400 transition-all">Buy Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
