@{
    ViewData["Title"] = "Dashboard";
}

<div class="min-h-screen pt-24 px-4 md:px-8 pb-10 max-w-8xl mx-auto">
    
    <!-- Welcome Header -->
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-10 gap-4">
        <div>
            <h1 class="font-display text-4xl font-bold text-white mb-2">Welcome back, Citizen.</h1>
            <p class="text-slate-400">Your digital metropolis status is active.</p>
        </div>
        <div class="flex gap-3">
            <button class="px-5 py-2.5 glass rounded-xl text-sm font-bold text-slate-300 hover:bg-white/5 transition-all flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-green-500"></span> System Online
            </button>
            <button class="px-5 py-2.5 bg-metro-primary rounded-xl text-sm font-bold text-white shadow-lg shadow-blue-600/20 hover:bg-blue-600 transition-all">
                + Add Funds
            </button>
        </div>
    </div>

    <!-- MAIN BENTO GRID -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

        <!-- 1. IDENTITY CARD (Left Column) -->
        <div class="md:col-span-1 glass-strong rounded-3xl p-6 flex flex-col items-center text-center relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-24 bg-gradient-to-b from-metro-primary/20 to-transparent"></div>
            
            <div class="relative w-24 h-24 rounded-2xl bg-gradient-to-br from-metro-primary to-purple-600 p-1 mb-4 shadow-xl">
                <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Metropolis" alt="Avatar" class="w-full h-full rounded-xl bg-black" />
            </div>
            
            <h2 class="text-xl font-bold text-white">@User.Identity?.Name</h2>
            <div class="text-sm text-metro-primary font-mono mb-6">ID: 8829-XJ-92</div>

            <div class="w-full space-y-3">
                <div class="flex justify-between items-center p-3 rounded-xl bg-white/5 border border-white/5">
                    <span class="text-sm text-slate-400">Level</span>
                    <span class="font-bold text-white">42</span>
                </div>
                <div class="flex justify-between items-center p-3 rounded-xl bg-white/5 border border-white/5">
                    <span class="text-sm text-slate-400">Reputation</span>
                    <span class="font-bold text-green-400">High</span>
                </div>
            </div>
        </div>

        <!-- 2. FINANCE HUB (Center Top) -->
        <div class="md:col-span-2 glass-strong rounded-3xl p-8 relative">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h3 class="text-slate-400 text-sm font-medium uppercase tracking-wider">Vault Balance</h3>
                    <div class="text-4xl md:text-5xl font-display font-bold text-white mt-1">$24,500.00</div>
                </div>
                <div class="p-3 bg-metro-primary/10 rounded-xl text-metro-primary">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                </div>
            </div>

            <!-- Fake Chart -->
            <div class="h-32 w-full flex items-end justify-between gap-2 px-2 pb-2">
                <div class="w-full bg-metro-primary/20 rounded-t-sm h-[40%]"></div>
                <div class="w-full bg-metro-primary/30 rounded-t-sm h-[70%]"></div>
                <div class="w-full bg-metro-primary/50 rounded-t-sm h-[50%]"></div>
                <div class="w-full bg-metro-primary/40 rounded-t-sm h-[80%]"></div>
                <div class="w-full bg-metro-primary/70 rounded-t-sm h-[60%]"></div>
                <div class="w-full bg-metro-primary rounded-t-sm h-[90%] shadow-[0_0_20px_rgba(37,99,235,0.5)]"></div>
            </div>
        </div>

        <!-- 3. NOTIFICATIONS (Right Column) -->
        <div class="md:col-span-1 glass-strong rounded-3xl p-6">
            <h3 class="font-bold text-white mb-4 flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span> Alerts
            </h3>
            <div class="space-y-4">
                <div class="p-3 rounded-xl bg-white/5 border border-white/5 hover:bg-white/10 transition-colors cursor-pointer">
                    <div class="text-xs text-metro-cyan font-bold mb-1">GAMING</div>
                    <p class="text-sm text-slate-300">Tournament "Neon Drift" starts in 15 mins.</p>
                </div>
                <div class="p-3 rounded-xl bg-white/5 border border-white/5 hover:bg-white/10 transition-colors cursor-pointer">
                    <div class="text-xs text-metro-gold font-bold mb-1">SHOP</div>
                    <p class="text-sm text-slate-300">Your order #9921 has been shipped.</p>
                </div>
            </div>
        </div>

        <!-- 4. ACTIVE APPS (Bottom Wide) -->
        <div class="md:col-span-4 glass-strong rounded-3xl p-8 mt-2">
            <h3 class="font-bold text-slate-400 mb-6 uppercase text-sm tracking-widest">Ecosystem Apps</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                
                <!-- App 1: Bank -->
                <a href="#" class="group p-6 rounded-2xl bg-[#0F1218] border border-white/5 hover:border-metro-primary/50 transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-xl bg-metro-primary/20 text-metro-primary flex items-center justify-center mb-4 text-2xl group-hover:bg-metro-primary group-hover:text-white transition-colors">
                        üè¶
                    </div>
                    <h4 class="font-bold text-lg text-white">Metropolis Bank</h4>
                    <p class="text-sm text-slate-500 mt-2">Stake tokens, transfer funds, and view transaction history.</p>
                </a>

                <!-- App 2: Arcade -->
                <a href="#" class="group p-6 rounded-2xl bg-[#0F1218] border border-white/5 hover:border-metro-cyan/50 transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-xl bg-metro-cyan/20 text-metro-cyan flex items-center justify-center mb-4 text-2xl group-hover:bg-metro-cyan group-hover:text-black transition-colors">
                        üéÆ
                    </div>
                    <h4 class="font-bold text-lg text-white">Neon Arcade</h4>
                    <p class="text-sm text-slate-500 mt-2">Play casual games and earn crypto rewards instantly.</p>
                </a>

                <!-- App 3: Shop -->
                <a href="#" class="group p-6 rounded-2xl bg-[#0F1218] border border-white/5 hover:border-metro-gold/50 transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-xl bg-metro-gold/20 text-metro-gold flex items-center justify-center mb-4 text-2xl group-hover:bg-metro-gold group-hover:text-black transition-colors">
                        üõçÔ∏è
                    </div>
                    <h4 class="font-bold text-lg text-white">Global Market</h4>
                    <p class="text-sm text-slate-500 mt-2">Spend your earnings on real-world items and gift cards.</p>
                </a>

            </div>
        </div>

    </div>
</div>
