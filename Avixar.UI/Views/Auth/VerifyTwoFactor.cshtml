@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metropolis</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .input-field {
            background: #0B0F19;
            border: 1px solid #1F2937;
            transition: all 0.3s ease;
            letter-spacing: 0.5em;
            text-align: center;
            font-size: 1.5rem;
        }
        .input-field:focus {
            border-color: #6366F1;
            box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
            outline: none;
        }
    </style>
</head>
<body class="bg-[#05050A] text-white h-screen w-full overflow-hidden flex items-center justify-center">

    <div class="container mx-auto px-4 h-full flex items-center justify-center">
        <div class="w-full max-w-md mx-auto">
            <div class="mb-8 text-center">
                <h1 class="text-3xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-400">Security Check</h1>
                <p class="text-gray-400">Please enter the 6-digit code sent to your email.</p>
            </div>

            <form asp-action="VerifyTwoFactor" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm text-center"></div>

                <div class="space-y-2">
                    <label for="code" class="text-sm font-medium text-gray-300 block text-center">Verification Code</label>
                    <input name="code" type="text" maxlength="6" pattern="\d{6}" class="input-field w-full px-4 py-3 rounded-lg text-white placeholder-gray-700" placeholder="000000" required autocomplete="one-time-code" />
                </div>

                <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-lg transition-all duration-300 shadow-lg shadow-indigo-500/25">
                    Verify Identity
                </button>
            </form>

            <div class="mt-8 text-center">
                <p class="text-gray-400 text-sm">
                    Didn't receive the code? 
                    <a href="#" class="text-indigo-400 hover:text-indigo-300 transition-colors">Resend Code</a>
                </p>
                <p class="mt-4">
                    <a asp-action="Login" class="text-gray-500 hover:text-gray-400 text-xs">Back to Login</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
