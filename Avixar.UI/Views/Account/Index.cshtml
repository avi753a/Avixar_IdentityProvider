@model Avixar.Entity.UserProfileDto
@{
    ViewData["Title"] = "My Account";
}

<div class="min-h-screen pt-24 px-4 md:px-8 pb-10 max-w-6xl mx-auto">
    
    <!-- Header -->
    <div class="mb-10">
        <h1 class="font-display text-4xl font-bold text-white mb-2">Citizen Profile</h1>
        <p class="text-slate-400">Manage your identity and residency details.</p>
    </div>

    <!-- Alerts -->
    @if (TempData["Message"] != null)
    {
        <div class="mb-6 p-4 rounded-xl bg-green-500/10 border border-green-500/20 flex items-center gap-3 text-green-400">
            <span class="text-xl">‚úì</span>
            <p>@TempData["Message"]</p>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="mb-6 p-4 rounded-xl bg-red-500/10 border border-red-500/20 flex items-center gap-3 text-red-400">
            <span class="text-xl">‚ö†</span>
            <p>@TempData["Error"]</p>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <!-- Sidebar / Tabs -->
        <div class="lg:col-span-3">
            <div class="glass-strong rounded-2xl p-4 sticky top-28">
                <div class="flex flex-col gap-2">
                    <button onclick="switchTab('profile')" id="tab-btn-profile" class="tab-btn active w-full text-left px-4 py-3 rounded-xl text-sm font-bold transition-all flex items-center gap-3">
                        <span>üë§</span> Profile Details
                    </button>
                    <button onclick="switchTab('address')" id="tab-btn-address" class="tab-btn w-full text-left px-4 py-3 rounded-xl text-sm font-bold text-slate-400 hover:bg-white/5 transition-all flex items-center gap-3">
                        <span>üìç</span> Address Book
                    </button>
                    <button onclick="switchTab('security')" id="tab-btn-security" class="tab-btn w-full text-left px-4 py-3 rounded-xl text-sm font-bold text-slate-400 hover:bg-white/5 transition-all flex items-center gap-3">
                        <span>üõ°Ô∏è</span> Security
                    </button>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="lg:col-span-9">
            
            <!-- PROFILE TAB -->
            <div id="tab-content-profile" class="tab-content block animate-fade-in">
                <div class="glass-strong rounded-3xl p-8">
                    <h2 class="font-display text-2xl font-bold text-white mb-6">Personal Information</h2>
                    
                    <form asp-action="UpdateProfile" method="post" class="space-y-6" enctype="multipart/form-data">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <!-- Profile Image Upload -->
                        <div class="flex items-center gap-6 mb-8">
                            <div class="relative group">
                                <div class="w-24 h-24 rounded-2xl overflow-hidden bg-black/40 border-2 border-white/10 shadow-xl group-hover:border-metro-primary/50 transition-all">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Model.ImageUrl" id="profile-preview" class="w-full h-full object-cover" alt="Profile" />
                                    }
                                    else
                                    {
                                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=@Model.DisplayName" id="profile-preview" class="w-full h-full object-cover" alt="Profile" />
                                    }
                                    
                                    <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer" onclick="document.getElementById('ProfileImage').click()">
                                        <span class="text-white text-xs font-bold">CHANGE</span>
                                    </div>
                                </div>
                                <input asp-for="ProfileImage" type="file" class="hidden" accept="image/*" onchange="previewImage(this)" />
                            </div>
                            <div>
                                <h3 class="text-white font-bold text-lg">Profile Picture</h3>
                                <p class="text-slate-400 text-sm mb-2">Supports JPG, PNG or GIF. Max 5MB.</p>
                                <button type="button" onclick="document.getElementById('ProfileImage').click()" class="text-sm text-metro-primary hover:text-white transition-colors font-bold">
                                    Upload New Photo
                                </button>
                            </div>
                        </div>

                        <!-- Email (Read Only) -->
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-slate-400 mb-2">Digital ID (Email)</label>
                            <div class="relative">
                                <input asp-for="Email" class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-slate-500 cursor-not-allowed focus:outline-none" readonly />
                                <div class="absolute right-4 top-3.5 text-slate-600">üîí</div>
                            </div>
                        </div>

                        <!-- Display Name -->
                        <div>
                            <label asp-for="DisplayName" class="block text-sm font-medium text-slate-400 mb-2">Display Name</label>
                            <input asp-for="DisplayName" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" placeholder="Enter your alias" maxlength="300" />
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- First Name -->
                            <div>
                                <label asp-for="FirstName" class="block text-sm font-medium text-slate-400 mb-2">First Name</label>
                                <input asp-for="FirstName" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" placeholder="John" maxlength="300" />
                            </div>
                            <!-- Last Name -->
                            <div>
                                <label asp-for="LastName" class="block text-sm font-medium text-slate-400 mb-2">Last Name</label>
                                <input asp-for="LastName" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" placeholder="Doe" maxlength="300" />
                            </div>
                        </div>

                        <div class="pt-4 flex justify-end">
                            <button type="submit" class="px-8 py-3 bg-metro-primary hover:bg-blue-600 text-white font-bold rounded-xl shadow-lg shadow-blue-600/20 transition-all transform hover:-translate-y-0.5">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- ADDRESS TAB -->
            <div id="tab-content-address" class="tab-content hidden animate-fade-in">
                
                <!-- Existing Addresses -->
                <div class="glass-strong rounded-3xl p-8 mb-8">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="font-display text-2xl font-bold text-white">My Addresses</h2>
                        <span class="text-sm text-slate-400 bg-white/5 px-3 py-1 rounded-full">@((Model.Addresses?.Count ?? 0)) Locations</span>
                    </div>

                    @if (Model.Addresses != null && Model.Addresses.Any())
                    {
                        <div class="grid grid-cols-1 gap-4">
                            @foreach (var addr in Model.Addresses)
                            {
                                <div class="p-5 rounded-2xl bg-black/20 border border-white/5 hover:border-metro-primary/30 transition-all group relative">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <div class="flex items-center gap-2 mb-1">
                                                <span class="text-metro-cyan font-bold text-sm uppercase tracking-wider">@addr.Label</span>
                                            </div>
                                            <p class="text-white font-medium">@addr.AddressLine1 @addr.AddressLine2</p>
                                            <p class="text-slate-400 text-sm">@addr.City, @addr.PostalCode</p>
                                        </div>
                                        
                                        <form asp-action="DeleteAddress" method="post" onsubmit="return confirm('Are you sure you want to remove this location?');">
                                            <input type="hidden" name="id" value="@addr.Id" />
                                            <button type="submit" class="p-2 text-slate-500 hover:text-red-400 hover:bg-red-500/10 rounded-lg transition-all" title="Delete Address">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-10 border-2 border-dashed border-white/5 rounded-2xl">
                            <div class="text-4xl mb-3">üó∫Ô∏è</div>
                            <p class="text-slate-400">No addresses registered in the system.</p>
                        </div>
                    }
                </div>

                <!-- Add New Address -->
                <div class="glass-strong rounded-3xl p-8">
                    <h3 class="font-display text-xl font-bold text-white mb-6 flex items-center gap-2">
                        <span class="w-6 h-6 rounded-full bg-metro-primary/20 text-metro-primary flex items-center justify-center text-xs">+</span>
                        Register New Location
                    </h3>
                    
                    <form asp-action="AddAddress" method="post" class="space-y-5">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-2">Label</label>
                                <input name="Label" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" placeholder="e.g. Home Base" maxlength="300" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-2">City</label>
                                <input name="City" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" required maxlength="300" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Address Line 1</label>
                            <input name="AddressLine1" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" required maxlength="300" />
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-2">Address Line 2 (Optional)</label>
                                <input name="AddressLine2" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" maxlength="300" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-2">Postal Code</label>
                                <input name="PostalCode" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary focus:ring-1 focus:ring-metro-primary outline-none transition-all placeholder:text-slate-600" required maxlength="300" />
                            </div>
                        </div>

                        <div class="pt-2 flex justify-end">
                            <button type="submit" class="px-6 py-3 bg-white/10 hover:bg-metro-primary text-white font-bold rounded-xl border border-white/10 hover:border-metro-primary transition-all">
                                Add Location
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- SECURITY TAB -->
            <div id="tab-content-security" class="tab-content hidden animate-fade-in">
                <div class="glass-strong rounded-3xl p-8 space-y-8">
                    <h2 class="font-display text-2xl font-bold text-white mb-6">Security Settings</h2>

                    <!-- 2FA Section -->
                    <div class="p-6 rounded-2xl bg-black/20 border border-white/5">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-lg font-bold text-white mb-1">Two-Factor Authentication</h3>
                                <p class="text-slate-400 text-sm">Secure your account with OTP verification on login.</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="2fa-toggle" class="sr-only peer" onchange="toggle2FA(this)">
                                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                            </label>
                        </div>
                    </div>

                    <!-- Email Verification Section -->
                    <div class="p-6 rounded-2xl bg-black/20 border border-white/5">
                        <div class="flex items-center justify-between mb-4">
                            <div>
                                <h3 class="text-lg font-bold text-white mb-1">Email Verification</h3>
                                <p class="text-slate-400 text-sm">Status of your digital identity verification.</p>
                            </div>
                            <div id="email-status-badge">
                                <!-- Populated by JS -->
                            </div>
                        </div>
                        <div id="verify-email-action" class="hidden">
                            <button onclick="sendVerificationEmail()" class="text-sm text-indigo-400 hover:text-indigo-300 font-bold">
                                Send Verification Link
                            </button>
                        </div>
                    </div>

                    <!-- Email Update Section -->
                    <div class="p-6 rounded-2xl bg-black/20 border border-white/5">
                        <h3 class="text-lg font-bold text-white mb-4">Update Email Address</h3>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-2">New Email Address</label>
                                <div class="flex gap-3">
                                    <input type="email" id="new-email" class="flex-1 bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-metro-primary outline-none" placeholder="new@example.com" />
                                    <button onclick="sendEmailUpdateOtp()" class="px-6 py-3 bg-white/10 hover:bg-metro-primary text-white font-bold rounded-xl transition-all">
                                        Send OTP
                                    </button>
                                </div>
                            </div>
                            
                            <div id="email-otp-section" class="hidden space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-slate-400 mb-2">Enter OTP Code</label>
                                    <div class="flex gap-3">
                                        <input type="text" id="email-otp" class="w-32 bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white text-center tracking-widest" placeholder="000000" maxlength="6" />
                                        <button onclick="verifyEmailUpdate()" class="px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-bold rounded-xl transition-all">
                                            Verify & Update
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<style>
    .tab-btn.active {
        background-color: #2563EB;
        color: white;
        box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.4);
    }
    .animate-fade-in {
        animation: fadeIn 0.3s ease-in-out;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    function switchTab(tabName) {
        // Hide all contents
        document.querySelectorAll('.tab-content').forEach(el => {
            el.classList.add('hidden');
            el.classList.remove('block');
        });
        
        // Show selected content
        const content = document.getElementById('tab-content-' + tabName);
        content.classList.remove('hidden');
        content.classList.add('block');

        // Reset all buttons
        document.querySelectorAll('.tab-btn').forEach(el => {
            el.classList.remove('active', 'bg-metro-primary', 'text-white', 'shadow-lg');
            el.classList.add('text-slate-400', 'hover:bg-white/5');
        });

        // Activate selected button
        const btn = document.getElementById('tab-btn-' + tabName);
        btn.classList.add('active');
        btn.classList.remove('text-slate-400', 'hover:bg-white/5');
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('profile-preview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    // Security Functions
    document.addEventListener('DOMContentLoaded', function() {
        loadSecuritySettings();
    });

    async function loadSecuritySettings() {
        try {
            // Set 2FA Toggle
            const twoFactorEnabled = @Model.TwoFactorEnabled.ToString().ToLower();
            document.getElementById('2fa-toggle').checked = twoFactorEnabled;
            
            // Set Email Verification Badge
            const emailVerified = @Model.EmailVerified.ToString().ToLower();
            const badgeContainer = document.getElementById('email-status-badge');
            const actionContainer = document.getElementById('verify-email-action');
            
            if (emailVerified) {
                badgeContainer.innerHTML = '<span class="px-3 py-1 rounded-full bg-green-500/20 text-green-400 text-sm font-bold border border-green-500/20 flex items-center gap-2">‚úì Verified</span>';
                actionContainer.classList.add('hidden');
            } else {
                badgeContainer.innerHTML = '<span class="px-3 py-1 rounded-full bg-yellow-500/20 text-yellow-400 text-sm font-bold border border-yellow-500/20 flex items-center gap-2">‚ö† Unverified</span>';
                actionContainer.classList.remove('hidden');
            }
        } catch (error) {
            console.error('Error loading settings', error);
        }
    }

    async function toggle2FA(checkbox) {
        try {
            const response = await fetch('/Account/ToggleTwoFactor?enabled=' + checkbox.checked, { method: 'POST' });
            if (response.ok) {
                alert('Two-Factor Authentication ' + (checkbox.checked ? 'Enabled' : 'Disabled'));
            } else {
                checkbox.checked = !checkbox.checked; // Revert
                alert('Failed to update 2FA settings');
            }
        } catch (error) {
            checkbox.checked = !checkbox.checked;
            alert('Error updating settings');
        }
    }

    async function sendVerificationEmail() {
        try {
            const response = await fetch('/api/verification/send-email', { method: 'POST' });
            if (response.ok) {
                alert('Verification email sent!');
            } else {
                alert('Failed to send email');
            }
        } catch (error) {
            alert('Error sending email');
        }
    }

    async function sendEmailUpdateOtp() {
        const email = document.getElementById('new-email').value;
        if (!email) return alert('Please enter a new email');
        
        try {
            const response = await fetch('/Account/SendEmailUpdateOtp?newEmail=' + encodeURIComponent(email), { method: 'POST' });
            if (response.ok) {
                document.getElementById('email-otp-section').classList.remove('hidden');
                alert('OTP sent to ' + email);
            } else {
                alert('Failed to send OTP');
            }
        } catch (error) {
            alert('Error sending OTP');
        }
    }

    async function verifyEmailUpdate() {
        const email = document.getElementById('new-email').value;
        const code = document.getElementById('email-otp').value;
        
        try {
            const response = await fetch('/Account/VerifyEmailUpdate?newEmail=' + encodeURIComponent(email) + '&code=' + code, { method: 'POST' });
            if (response.ok) {
                alert('Email updated successfully!');
                location.reload();
            } else {
                alert('Invalid OTP or failed to update');
            }
        } catch (error) {
            alert('Error verifying OTP');
        }
    }
</script>
