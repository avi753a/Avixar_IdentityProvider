@model dynamic
@{
    ViewData["Title"] = "Welcome";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white">Welcome, @ViewData["Username"]!</h2>
        <p class="mt-2 text-center text-sm text-slate-400">
            You have successfully signed in.
        </p>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <div class="glass p-8 rounded-xl shadow-2xl text-center">
            <div class="mb-6">
                <svg class="mx-auto h-12 w-12 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h3 class="text-base font-semibold leading-7 text-white">Login Successful</h3>
            <p class="mt-1 text-sm leading-6 text-slate-400">You are now authenticated.</p>
            
            <div class="mt-6">
                @if (!string.IsNullOrEmpty(returnUrl))
                {
                    <a href="@returnUrl" class="flex w-full justify-center rounded-md bg-brand-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 transition-all">Continue to App</a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Index" class="flex w-full justify-center rounded-md bg-brand-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 transition-all">Go to Home</a>
                }
            </div>
        </div>
    </div>
</div>
